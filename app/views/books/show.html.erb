<% flash.each do |key, value| %>
  <p><%= value %></p>
<% end %>

<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
        </br>
        <%= render 'users/userinfo', user: @user, book: @book %>
      </div>
      
      <div class= "col-md-8 offset-md-1">
        </br>
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= image_tag @user.get_profile_image(100,100) %></br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
              </td>
                <% end %>
                <% if @book.user == current_user %>
              <td>
                <%= link_to "Delete", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
                <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>