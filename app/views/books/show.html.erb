<% flash.each do |key, value| %>
  <p><%= value %></p>
<% end %>

<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id) do %>
          <%= image_tag @user.get_profile_image(80,80) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>

</main>