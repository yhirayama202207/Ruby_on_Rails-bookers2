<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        </br>
          <h1>Editing Book</h1>
          <% if @book.errors.any? %>
            <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
            <%= f.label :Title %></br>
            <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:""%></br></br>
            <%= f.label :Opinion %></br>
            <%= f.text_area :body, autofocus: true, id:"inputboby", placeholder:""%></br></br>
            <%= f.submit "Update Book", class: "btn btn-success" %>
          <% end %>
          </br>
          <%= link_to "Show", book_path(@book.id) %>
          |
          <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>