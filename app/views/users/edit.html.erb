<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  <%= f.label :Name %></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <%= f.label :Image %></br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
  <%= f.label :Introduction %></br>
  <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%>
  <%= f.submit "Update User" %>
<% end %>