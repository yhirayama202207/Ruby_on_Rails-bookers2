<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        </br>
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
          <%= f.label :Name %></br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br></br>
          <%= f.label :Image %></br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br></br>
          <%= f.label :Introduction %></br>
          <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%></br></br>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>